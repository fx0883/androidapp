            <!--</intent-filter>-->
        </activity>

        <activity
            android:name="com.colorgarden.app6.activity.Activity_View_More"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.colorgarden.app6.activity.ActivityImageCategory"
            android:configChanges="orientation|screenSize|keyboardHidden"
